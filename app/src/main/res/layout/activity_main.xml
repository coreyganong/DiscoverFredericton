<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.coreyganong.discoverfredericton.MainActivity">

    <!--
    This layout is a two-pane layout for the Items
    master/detail flow.
    
    -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/button_list"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/info_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:drawableTop="@android:drawable/ic_menu_info_details"
            android:drawableTint="#000000"
            android:paddingTop="40dp"
            android:text="Info"
            android:textSize="30dp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/map_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:drawableTop="@android:drawable/ic_dialog_map"
            android:drawableTint="#000000"
            android:paddingTop="40dp"
            android:text="Map"
            android:textSize="30dp"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/passport_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:drawableTop="@android:drawable/ic_menu_mapmode"
            android:drawableTint="#000000"
            android:paddingTop="40dp"
            android:text="My Passport"
            android:textSize="30dp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/end_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:drawableTop="@android:drawable/ic_menu_revert"
            android:drawableTint="#000000"
            android:paddingTop="40dp"
            android:text="End Tour"
            android:textSize="30dp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false">
        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/entry_bg"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/child_img"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/citizen_img"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/stroll_img"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/tour_img"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
