<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.coreyganong.discoverfredericton.MainActivity">

    <!--
    This layout is a two-pane layout for the Items
    master/detail flow.
    
    -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/button_list"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/info_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTint="#ffffff"
            android:drawableTop="@drawable/info_icon"
            android:paddingTop="40dp"
            android:text="Info"
            android:textSize="30dp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/map_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorKids3"
            android:drawableTop="@drawable/map_icon"
            android:drawableTint="#ffffff"
            android:paddingTop="40dp"
            android:text="Map"
            android:textSize="30dp"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/passport_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorKids4"
            android:drawableTop="@drawable/passport_icon"
            android:drawableTint="#ffffff"
            android:paddingTop="40dp"
            android:text="My Passport"
            android:textSize="30dp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/end_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorKids5"
            android:drawableTop="@drawable/end_icon"
            android:drawableTint="#ffffff"
            android:paddingTop="40dp"
            android:text="End Tour"
            android:textSize="30dp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false">
        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button1"
                        android:id="@+id/button1"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/kids2"
                        android:id="@+id/button2"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/kids3"
                        android:id="@+id/button3"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/kids4"
                        android:id="@+id/button4"
                        />
                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/kids5"
                        android:id="@+id/button5"
                        />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
